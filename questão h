using System;

namespace Exercicíos
{
	class Program
	{
		public static void Main()
		{
			Console.Write("Digite um número racional : ");
			float numero = float.Parse(Console.ReadLine());
			
			if (numero >= 0){
				Console.WriteLine("O  digitado número é positivo.");
			}else{ 
				Console.WriteLine("O digitado número é negativo.");
			}
			Console.Write("Pressione uma tecla qualquer . . . ");
			Console.ReadKey(true);
		}
	}
}
